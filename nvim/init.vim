set clipboard+=unnamedplus

noremap <Up> <Nop>
noremap <Down> <Nop>
noremap <Left> <Nop>
noremap <Right> <Nop>

" No swap file 
set noswapfile

" Set undo-trees in files
set undofile
set undodir=$HOME/.config/nvim/undo
set undolevels=10000
set undoreload=10000


" Spaces and Indentation
set autoindent
set expandtab
set tabstop=4
set softtabstop=4
set shiftwidth=4

" General
set number
